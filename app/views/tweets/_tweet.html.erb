<div id="<%= dom_id tweet %>" class="card bg-dark text-light">
  <div class="card-header h-10">
    <%= image_tag tweet.user.display_profile_image, height: "64px", class: "rounded-circle"%>
    <span class="fs-4 mx-4"> <%= tweet.user.name %> </span>
  </div>
  <div class="card-body">
    <%= tweet.text %>
  </div>
  <div class="card-footer flex-direction:row">
    <div>
      <% if @user.like?(tweet) %>
        <%= button_to "Like(Already) : #{tweet.like_count}", {controller: 'likes', action: "create"}, {method: :delete , params:{ tweet_id: tweet.id, user_id: @user.id}}%>
      <% else %>
          <%= button_to "Like(NotYet) : #{tweet.like_count}", {controller: 'likes', action: "delete"}, {method: :create , params:{ tweet_id: tweet.id, user_id: @user.id}} %>
      <% end %>
    </div>
    <div>
      <%= link_to "Show this tweet", tweet_path(@user, tweet) %>
    </div>
  </div>
  <span class="border border-light border-1"></span>
</div>
